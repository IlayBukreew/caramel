{
"name": "Story block",
"settings": [


{
"type": "image_picker",
"id": "main_img",
"label": "First image"
},
{
"type": "image_picker",
"id": "image_2",
"label": "Second image"
},
{
"type": "image_picker",
"id": "image_3",
"label": "Third image"
},
{
  "type": "color",
  "id": "circle_1",
  "label": "First circle color",
  "default": "#7fffd4"
},
{
  "type": "color",
  "id": "circle_2",
  "label": "Second circle color",
  "default": "#302d6f"
},
{
  "type": "color",
  "id": "circle_3",
  "label": "Third circle color",
  "default": "#bb2b6a"
},
{
  "type": "color",
  "id": "bg_color",
  "label": "Rectangle background color",
  "default": "#e0c3c9"
},
{
"type": "text",
"id": "btn_text",
"label": "Button text",
"default": "DISCOVER SEASONAL GIFTS"
},
{
"type": "url",
"id": "btn_link",
"label": "Button link"
},
{
"type": "text",
"id": "heading",
"label": "Heading text",
"default": "Highlands Edit"
},
{
"type": "textarea",
"id": "textarea",
"label": "Description text"
}
],
"presets": [
