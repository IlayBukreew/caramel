{% assign image_one = section.settings.image_one %}
{% assign image_two = section.settings.image_two %}

<section class="about-banner" id="section-{{ section.id }}">
    <div class="Container">
        <div class="images">
            <div class="image">
              <img class="Image--lazyLoad Image--fadeIn" src="{{ image_one | img_url: 'grande' }}" data-src="{{ image_one | img_url: 'grande' }}" data-sizes="auto" data-expand="-100" alt="{{ image_one.alt | escape }}" data-max-width="{{ image_one.width }}" data-max-height="{{ image_one.height }}" data-original-src="{{ image_one | img_url: 'master' }}">
                	<span class="Image__Loader">
            </div>
            <div class="image">
              <img class="Image--lazyLoad Image--fadeIn" src="{{ image_two | img_url: 'grande' }}" data-src="{{ image_two | img_url: 'grande' }}" data-sizes="auto" data-expand="-100" alt="{{ image_two.alt | escape }}" data-max-width="{{ image_two.width }}" data-max-height="{{ image_two.height }}" data-original-src="{{ image_two | img_url: 'master' }}">
              <span class="Image__Loader">
            </div>
        </div>
        <div class="heading">
            <h2>
                {{section.settings.heading}}
            </h2>
        </div>
    </div>
</section>

{% schema %}

{
    "name": "About banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "image_one",
            "label": "Image one"
        }, {
            "type": "image_picker",
            "id": "image_two",
            "label": "Image two"
        }, {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading text"
        }
    ]
}

{% endschema %}