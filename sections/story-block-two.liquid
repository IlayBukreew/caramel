"label": "First image"
},
{
"type": "text",
"id": "btn_text",
"label": "Button text",
"default": "DISCOVER SEASONAL GIFTS"
},
{
"type": "url",
"id": "btn_link",
"label": "Button link"
},
{
"type": "text",
"id": "heading",
"label": "Heading text",
"default": "Highlands Edit"
},
{
"type": "textarea",
"id": "textarea",
"label": "Description text"
},
{
"type": "text",
"id": "image_heading",
"label": "Second image heading",
"default": "Heading"
},
{
"type": "text",
"id": "image_text",
"label": "Second image text",
"default": "Woodpecker cardigan, brown illum qui dolorem eum fugiat quo voluptas nulla pariatur"
},
{
"type": "image_picker",
"id": "image_2",
"label": "Second image"
}

]
	 }
 ],

"presets": [
{
"category": "Custom",
"name": "Story block two"
}
]
}
{% endschema %}