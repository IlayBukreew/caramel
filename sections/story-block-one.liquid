<section class="story-one" id={{section.id}}>

<!-- Slider main container -->
<div class="swiper-container">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
	{% for block in section.blocks %}
	{% assign slide = block.settings %}
    <div class="swiper-slide">
		<h3 class="story-heading"><span>Craft —</span> Pattern </h3>
		<div class="content">
			<div class="col-one">
				<div class="col-content">
					{%- render 'image', image: slide.main_img -%}
					<a class="Form__Submit Button Button--primary"
						href="{{ slide.btn_link }}">
						{{ slide.btn_text }}
						<span>→</span>
					</a>
				</div>
			</div>
			<div class="col-two">
				<h2>{{ slide.heading }}</h2>
				<p>{{ slide.textarea }}</p>
				<div class="circles">
					<img src="{{ slide.img_1 | img_url: 'medium' }}" alt="">
					<img src="{{ slide.img_2 | img_url: 'medium' }}" alt="">
					<img src="{{ slide.img_3 | img_url: 'medium' }}" alt="">
				</div>
				<a class=" mobile-dblock Form__Submit Button Button--primary"
					href="{{ slide.btn_link }}">{{ slide.btn_text }}<span>→</span></a>
			</div>
		</div>
	</div>
	{% endfor %}

  </div>

  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

</div>



</section>

<script>
 function sliderInit() {
    const swiper = new Swiper('.swiper-container', {
      loop: true,
      effect: 'fade',
      allowTouchMove: false,
      // Navigation arrows
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      }
    })
    if (swiper.slides.length <= 3) {
      swiper.navigation.nextEl.style.display = 'none'
    }
  }
	sliderInit()

</script>



{% schema %}
{
"name": "Story block",
"blocks":[
	{
		"type": "slider",
		"name": "Slide",
		"settings": [


{
"type": "image_picker",
"id": "main_img",
"label": "Image"
},
{
"type": "text",
"id": "btn_text",
"label": "Button text",
"default": "DISCOVER SEASONAL GIFTS"
},
{
"type": "url",
"id": "btn_link",
"label": "Button link"
},
{
"type": "text",
"id": "heading",
"label": "Heading text",
"default": "Highlands Edit"
},
{
"type": "textarea",
"id": "textarea",
"label": "Description text"
},
{
"type": "image_picker",
"id": "img_1",
"label": "Circle 1 image"
},
{
"type": "image_picker",
"id": "img_2",
"label": "Circle 2 image"
},
{
"type": "image_picker",
"id": "img_3",
"label": "Circle 3 image"
}

]
	 }
 ],

"presets": [
{
"category": "Custom",
"name": "Story block one"
}
]
}
{% endschema %}