<section class="story-one" id={{section.id}}>

	<!-- Slider main container -->
	<div class="swiper-container">
		<!-- Additional required wrapper -->
		<div class="swiper-wrapper">
			<!-- Slides -->
			{% for block in section.blocks %}
			{% assign slide = block.settings %}
			<div class="swiper-slide">
				<h3 class="story-heading"><span>Craft —</span> Pattern </h3>
				<div class="content">
					<div class="col-one">
						<div class="col-content">
							{%- render 'image', image: slide.main_img -%}
							<a class="Form__Submit Button Button--primary" href="{{ slide.btn_link }}">
								{{ slide.btn_text }}
								<span>→</span>
							</a>
						</div>
					</div>
					<div class="col-two">
						<h2>{{ slide.heading }}</h2>
						<p>{{ slide.textarea }}</p>
						<div class="circles">
							<img src="{{ slide.img_1 | img_url: 'medium' }}" alt="">
							<img src="{{ slide.img_2 | img_url: 'medium' }}" alt="">
							<img src="{{ slide.img_3 | img_url: 'medium' }}" alt="">
						</div>
						<a class=" mobile-dblock Form__Submit Button Button--primary"
							href="{{ slide.btn_link }}">{{ slide.btn_text }}<span>→</span></a>
					</div>
				</div>
			</div>
			{% endfor %}

		</div>

		<div class="swiper-button-prev"></div>
		<div class="swiper-button-next">
