<section class="story-one" id={{section.id}}>
	<h3 class="story-heading"><span>Craft —</span> Pattern </h3>
	<div class="content">
		<div class="col-one">
			<div class="col-content">
				{%- render 'image', image: section.settings.main_img -%}
				<a class="Form__Submit Button Button--primary"
					href="{{ section.settings.btn_link }}">
					{{ section.settings.btn_text }}
					<span>→</span>
				</a>
			</div>
		</div>
		<div class="col-two">
			<h2>{{ section.settings.heading }}</h2>
			<p>{{ section.settings.textarea }}</p>
			<div class="circles">
				<img src="{{ section.settings.img_1 | img_url: 'medium' }}" alt="">
				<img src="{{ section.settings.img_2 | img_url: 'medium' }}" alt="">
				<img src="{{ section.settings.img_3 | img_url: 'medium' }}" alt="">
			</div>
			<a class=" mobile-dblock Form__Submit Button Button--primary"
				href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}<span>→</span></a>
		</div>
	</div>
</section>



{% schema %}
{
"name": "Story block",
"settings": [


{
"type": "image_picker",
"id": "main_img",
"label": "Image"
},
{
"type": "text",
"id": "btn_text",
"label": "Button text",
"default": "DISCOVER SEASONAL GIFTS"
},
{
"type": "url",
"id": "btn_link",
"label": "Button link"
},
{
"type": "text",
"id": "heading",
"label": "Heading text",
"default": "Highlands Edit"
},
{
"type": "textarea",
"id": "textarea",
"label": "Description text"
},
{
"type": "image_picker",
"id": "img_1",
"label": "Circle 1 image"
},
{
"type": "image_picker",
"id": "img_2",
"label": "Circle 2 image"
},
{
"type": "image_picker",
"id": "img_3",
"label": "Circle 3 image"
}

],
"presets": [
{
"category": "Custom",
"name": "Story block one"
}
]
}
{% endschema %}