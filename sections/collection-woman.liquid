<section class="category-page">
  <div class="container">
  <h2>{{collection.title | upcase }} &mdash; CATEGORY</h2>
    <div class="categories">

      {% for block in section.blocks %}
      {% assign subcategory = collections[block.settings.collector] %}
        <div class="category">
         <a href="{{ subcategory.url }}">
            <img src="{{ subcategory.image | img_url: 'original' }}" alt="">
            <h2>{{subcategory.title}}</h2>
         </a>
        </div>
      {% endfor %}

    </div>
  </div>
</section>
{% schema %}
{
  "name": "Categories page section",
  "class": "shopify-section--bordered",
  "blocks":[
    {
      "type": "text",
      "name": "Subcategory",
      "settings":[
        {
          "type": "collection",
          "id": "collector",
          "label": "Collection",
          "info": "Choose collection for subcategory"
        }
      ]
    }
  ]
} 
{% endschema %}