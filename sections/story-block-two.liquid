<section class="story-two" id="section-{{section.id}}">

	<div class="content">
		<div class="col-one">
			<div class="col-content">
				<h3 class="story-heading"><span>Craft —</span> Pattern </h3>
				{%if section.settings.main_img %}
					{%- render 'image', image: section.settings.main_img -%}
				{% endif %}

				<a class="Form__Submit Button Button--primary"
					href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}<span>→</span></a>
			</div>
		</div>
		<div class="col-two">
			<h2>{{ section.settings.heading }}</h2>
			<p>{{ section.settings.textarea }}</p>
			<div class="image">
				<h3>{{section.settings.image_heading}}</h3>
				<p>{{ section.settings.image_text }}</p>
				{%if section.settings.image_2 %}
					{%- render 'image', image: section.settings.image_2 -%}
				{% endif %}
			</div>
			<a class=" mobile-dblock Form__Submit Button Button--primary"
				href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}<span>→</span></a>
		</div>
	</div>
</section>



{% schema %}
{
"name": "Story block",
"settings": [


{
"type": "image_picker",
"id": "main_img",
"label": "First image"
},
{
"type": "text",
"id": "btn_text",
"label": "Button text",
"default": "DISCOVER SEASONAL GIFTS"
},
{
"type": "url",
"id": "btn_link",
"label": "Button link"
},
{
"type": "text",
"id": "heading",
"label": "Heading text",
"default": "Highlands Edit"
},
{
"type": "textarea",
"id": "textarea",
"label": "Description text"
},
{
"type": "text",
"id": "image_heading",
"label": "Second image heading",
"default": "Heading"
},
{
"type": "text",
"id": "image_text",
"label": "Second image text",
"default": "Woodpecker cardigan, brown illum qui dolorem eum fugiat quo voluptas nulla pariatur"
},
{
"type": "image_picker",
"id": "image_2",
"label": "Second image"
}

],
"presets": [
{
"category": "Custom",
"name": "Story block two"
}
]
}
{% endschema %}