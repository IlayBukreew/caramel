<section class="our-values">
	<div class="Container">
		<div class="column column-text">
			<h3>&nbsp;Caramel &mdash; </h3>
			<span>&nbsp;Our Values</span>
		</div>
		<div class="cards">
			{% for block in section.blocks %}
			{% assign card = block.settings %}
				<div class="card">
					<div class="image">
						<img class="Image--lazyLoad Image--fadeIn" src="{{ card.image | img_url: 'grande' }}" data-src="{{ card.image | img_url: 'grande' }}"
							data-sizes="auto" data-expand="-100" alt="{{ card.image.alt | escape }}"
							data-max-width="{{ card.image.width }}" data-max-height="{{ card.image.height }}"
							data-original-src="{{ card.image | img_url: 'master' }}">
						<span class="Image__Loader">
					</div>
					<div class="text">
					<h2>{{ card.heading }}</h2>
						{{ card.text }}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>

{% schema %}
	{
		"name": "Our values",
		"max_blocks": 4,
		"blocks":[
			{
				"type": "card",
				"name": "Card",
				"settings":[
					{
						"type": "image_picker",
						"id": "image",
						"label": "Image"
					},
					{
						"type": "text",
						"id": "heading",
						"label": "Heading",
						"default": "Heading"
					},	
					{
						"type": "richtext",
						"id": "text",
						"label": "Text",
						"default": "<p>Text content</p>"
					}
				]
			 }
		 ]
		
	}
{% endschema %}