<section class="story-two story-four" id="section-{{section.id}}">
<div style="background-color: {{ section.settings.bg_color }} " class="rectangle"></div>
  <h3 class="story-heading"><span>Craft —</span> Pattern </h3>
  <div class="content">
    <div class="col-one">
      <div class="col-content">
        {%if section.settings.image_3 %}
        <div class="image_third">
        <img class="Image--lazyLoad Image--fadeIn" src="{{ section.settings.image_3 | img_url: 'grande' }}"
						data-src="{{ section.settings.image_3 | img_url: 'grande' }}" data-sizes="auto" data-expand="-100"
						alt="{{ section.settings.image_3.alt | escape }}" data-max-width="{{ section.settings.image_3.width }}" data-max-height="{{ section.settings.image_3.height }}"
						data-original-src="{{ section.settings.image_3 | img_url: 'master' }}">
					<span class="Image__Loader">
        </div>
        {% endif %}
        {%if section.settings.main_img %}
          {%- render 'image', image: section.settings.main_img -%}
        {% endif %}

        <a class="Form__Submit Button Button--primary"
          href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}<span>→</span></a>
      </div>
    </div>
    <div class="col-two">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.textarea }}</p>
      <div class="circles">
        <div style="background-color: {{section.settings.circle_1}}" class="circle"></div>
        <div style="background-color: {{section.settings.circle_2}}" class="circle"></div>
        <div style="background-color: {{section.settings.circle_3}}" class="circle"></div>
      </div>
      <div class="image">
        {%if section.settings.image_2 %}
        {%- render 'image', image: section.settings.image_2 -%}
        {% endif %}
      </div>
      <a class=" mobile-dblock Form__Submit Button Button--primary"
        href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}<span>→</span></a>
    </div>
  </div>
</section>
<style>
  @media (max-width: 1200px) {
    .story-four {
      background-color: {{section.settings.bg_color}};
    }
  }
</style>


